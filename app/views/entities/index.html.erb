<p id="notice"><%= notice %></p>

<h1>Entities</h1>

<table>
  <tbody>
    <% @entities.each do |entity| %>
      <% style = styling_data(entity.type) %>
      <tr>
        <td><%= entity.text %></td>
        <td><span class='element' style='background-color: <%=style[:bg_color]%>; color: <%=style[:text_color]%>'><%= entity.type %></span></td>
        <td><%= link_to 'Show', entity %></td>
        <td><%= link_to 'Edit', edit_entity_path(entity) %></td>
        <td><%= link_to 'Destroy', entity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Entity', new_entity_path %>
